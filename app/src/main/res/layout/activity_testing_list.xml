        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="110dp"
        android:layout_marginEnd="281dp"
        android:layout_marginRight="281dp"
        android:layout_marginStart="14dp"
        android:text="Phone"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="266dp"
        android:layout_marginRight="266dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="222dp"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <Button
        android:id="@+id/settings_image_btn"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="207dp"
        android:layout_marginBottom="22dp"
        android:background="@color/red"
        android:text="Change Image"
        android:textColor="@color/White" />


    <!--android:background="@drawable/chim"-->
    />

    <Button
        android:id="@+id/update"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/settings_image_btn"
        android:layout_marginEnd="50dp"
        android:text="Edit"
        android:textColor="@color/White"
        android:background="@color/red"
        />

    <ListView
        android:id="@+id/listInfoStudent"
        android:layout_width="262dp"
        android:layout_height="243dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="91dp" />

</RelativeLayout>